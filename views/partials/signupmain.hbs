<main>

  <h1>Sign up</h1>

  <div class="layout-text-input">
    <div class="layout-input-subtitle-box-signup">
      <label for="username" class="text-input--subtitle">Username:</label>
    </div>
    <input type="text" id="username" class="text-input">
    <br>
  </div>

  <div class="layout-text-input">
    <div class="layout-input-subtitle-box-signup">
      <label for="fullname" class="text-input--subtitle">Full name:</label>
    </div>
    <input type="text" id="fullname" class="text-input">
    <br>
  </div>

  <div class="layout-text-input">
    <div class="layout-input-subtitle-box-signup">
      <label for="email" class="text-input--subtitle">Email:</label>
    </div>
    <input type="email" id="email" class="text-input">
    <br>
  </div>

  <div class="layout-text-input">
    <div class="layout-input-subtitle-box-signup">
      <label for="password" class="text-input--subtitle">Password:</label>
    </div>
    <input type="password" id="password" class="text-input">
    <br>
  </div>

  <div class="layout-text-input">
    <div class="layout-input-subtitle-box-signup">
      <label for="confirm-password" class="text-input--subtitle">Confirm password:</label>
    </div>
    <input type="password" id="confirm-password" class="text-input">
    <br>
  </div>

  <br>

  <div class="button button--submit" onclick=signUp()>Submit</div>

</main>